{
  "name": "@ai-marketplace/root",
  "version": "1.0.0",
  "description": "AI Agent Marketplace - Autonomous negotiation platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "dev:frontend": "turbo run dev --filter=@ai-marketplace/frontend",
    "dev:backend": "turbo run dev --filter=@ai-marketplace/backend",
    "dev:all": "turbo run dev --parallel",
    "build:all": "turbo run build",
    "clean": "turbo run clean && rm -rf node_modules",
    "setup": "pnpm install && turbo run build --filter=@ai-marketplace/shared-types"
  },
  "keywords": [
    "ai",
    "marketplace",
    "negotiation",
    "agents",
    "convex",
    "inkeep",
    "monorepo"
  ],
  "author": "AI Marketplace Team",
  "license": "MIT",
  "devDependencies": {
    "turbo": "^1.10.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "packageManager": "pnpm@8.0.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
